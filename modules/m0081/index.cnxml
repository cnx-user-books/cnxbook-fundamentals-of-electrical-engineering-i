			  </m:apply>
			  <m:apply>
			    <m:minus/>
			    <m:cn>1</m:cn>
			    <m:apply>
			      <m:times/>
			      <m:cn>4</m:cn>
			      <m:apply>
				<m:power/>
				<m:pi/>
				<m:cn>2</m:cn>
			      </m:apply>
			      <m:apply>
				<m:power/>
				<m:ci>f</m:ci>
