			    </m:apply>
			    <m:apply>
			      <m:power/>
			      <m:ci>f</m:ci>
			      <m:cn>2</m:cn>
			    </m:apply>
			  </m:apply>
			</m:apply>
			<m:cn>2</m:cn>
		      </m:apply>
		      <m:apply>
			<m:times/>
			<m:cn>4</m:cn>
