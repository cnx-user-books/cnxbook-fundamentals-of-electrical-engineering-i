	</equation>


	<equation id="eq21">
	  <m:math>
	    <m:apply>
	      <m:eq/>
	      <m:apply>
		<m:mphantom>
		  <m:apply>
		    <m:divide/>
		    <m:apply>
		      <m:plus/>
		      <m:ci>s</m:ci>
